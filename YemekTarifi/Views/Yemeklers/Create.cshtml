@model YemekTarifi.Models.DB.Yemekler

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Oluştur</h1>

<h4>Yemekler</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                
                <label asp-for="YemekAd" class="control-label"></label>
                <input asp-for="YemekAd" class="form-control" />
                <span asp-validation-for="YemekAd" class="text-danger"  ></span>
            </div>
            <div class="form-group">
                <label asp-for="Malzeme" class="control-label"></label>
                <input asp-for="Malzeme" class="form-control" />
                <span asp-validation-for="Malzeme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarif" class="control-label"></label>
                <input asp-for="Tarif" class="form-control" />
                <span asp-validation-for="Tarif" class="text-danger"></span>
            </div>
            <div class="form-group", typeof="file">        
                <label asp-for="Resim" class="control-label"></label>
                <input asp-for="Resim" class="form-control" />
                <span asp-validation-for="Resim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Puan" class="control-label"></label>
                <input asp-for="Puan" class="form-control" />
                <span asp-validation-for="Puan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Yorum" class="control-label"></label>
                <input asp-for="Yorum" class="form-control" />
                <span asp-validation-for="Yorum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategoriId" class="control-label"></label>
                <select asp-for="KategoriId" class ="form-control" asp-items="ViewBag.KategoriId"></select>
            </div>
            <div class="form-group">
                <label asp-for="KullanıcıId" class="control-label"></label>
                <select asp-for="KullanıcıId" class ="form-control" asp-items="ViewBag.KullanıcıId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
